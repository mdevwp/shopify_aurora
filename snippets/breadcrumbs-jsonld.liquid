{% if template contains 'product' or template contains 'collection' or template contains 'page' %}
      <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "BreadcrumbList",
        "itemListElement": [
          {
            "@type": "ListItem",
            "position": 1,
            "item": {
              "@id": "{{ shop.url }}",
              "name": "Home"
            }
          }
          {% if template contains 'collection' or template contains 'product' %}
            {% if collection %}
              ,{
                "@type": "ListItem",
                "position": 2,
                "item": {
                  "@id": "{{ shop.url }}/collections/{{ collection.handle }}",
                  "name": "{{ collection.title }}"
                }
              }
            {% endif %}
          {% endif %}
          {% if template contains 'product' %}
            ,{
              "@type": "ListItem",
              "position": 3,
              "item": {
                "@id": "{{ shop.url }}{{ product.url }}",
                "name": "{{ product.title }}"
              }
            }
          {% endif %}
        ]
      }
      </script>
{% endif %}