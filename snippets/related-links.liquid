  Automatische interne Verlinkung f√ºr Kollektionen und Produkte im Footer
{% endcomment %}

{% if collection %}
  <!-- Automatische Verlinkung zu anderen Kollektionen -->
  <div class="footer-linking">
    <h6>{{ settings.related_collections_title }}</h6>
    <div class="link-row">
      {% assign count = 0 %}
      {% for col in collections %}
        {% if count < 4 and col.handle != collection.handle %}
          {% if count > 0 %} | {% endif %}
          <a href="{{ col.url }}" class="footer-link">{{ col.title }}</a>
          {% assign count = count | plus: 1 %}
        {% else %}
          {% break %}
        {% endif %}
      {% endfor %}
    </div>
  </div>

{% elsif product %}
  <!-- Automatische Verlinkung zu verwandten Produkten -->
  <div class="footer-linking">
    <h6>{{ settings.related_products_title }}</h6>
    <div class="link-row">
  {{ collection| json }}
      {% assign count = 0 %}
      {% if collection %}
        {% assign related_products = collection.products %}
      {% else %}
        {% assign related_products = collections.all.products %}
      {% endif %}
      
      {% for p in related_products %}
        {% if count < 4 and p.handle != product.handle %}
          {% if count > 0 %} | {% endif %}
          <a href="{{ p.url }}" class="footer-link">{{ p.title }}</a>
          {% assign count = count | plus: 1 %}
        {% else %}
          {% break %}
        {% endif %}
      {% endfor %}
    </div>
  </div>
{% endif %}
