{% if collection %}
  <!-- Automatische Verlinkung zu anderen Kollektionen -->
  <div class="footer-linking">
    <h5>Verwandte Kategorien</h5>
    <div class="link-row">
      {% assign count = 0 %}
      {% for col in collections %}
        {% if count < 4 and col.handle != collection.handle %}
          <a href="{{ col.url }}" class="footer-link">{{ col.title }}</a>
          {% assign count = count | plus: 1 %}
        {% else %}
          {% break %}
        {% endif %}
      {% endfor %}
    </div>
  </div>

{% elsif product %}
  <!-- Automatische Verlinkung zu verwandten Produkten -->
  <div class="footer-linking">
    <h5>Verwandte Produkte</h5>
    <div class="link-row">
      {% assign count = 0 %}
      {% for p in collection.products %}
        {% if count < 4 and p.handle != product.handle %}
          <a href="{{ p.url }}" class="footer-link">{{ p.title }}</a>
          {% assign count = count | plus: 1 %}
        {% else %}
          {% break %}
        {% endif %}
      {% endfor %}
    </div>
  </div>

{% endif %}